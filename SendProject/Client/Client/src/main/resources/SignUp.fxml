<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="practise.controllers2.SignUpController">
   <children>
      <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="480.0" styleClass="blue-panel" stylesheets="@css/styles.css">
          <children>
              <Label text="Регистрация" textFill="#2196f3">
                  <font>
                      <Font size="20.0" />
                  </font>
                  <VBox.margin>
                      <Insets left="20.0" />
                  </VBox.margin>
              </Label>
              <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
                  <children>
                      <TextField fx:id="RegLoginField" promptText="Логин" styleClass="tf_box" HBox.hgrow="ALWAYS">
                          <HBox.margin>
                              <Insets />
                          </HBox.margin>
                      </TextField>
                      <FontAwesomeIcon fill="WHITE" glyphName="USER" size="1.3em" />
                  </children>
                  <VBox.margin>
                      <Insets left="15.0" right="15.0" top="15.0" />
                  </VBox.margin>
              </HBox>
              <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
                  <children>
                      <TextField fx:id="RegPasswordField" promptText="Пароль" styleClass="tf_box" HBox.hgrow="ALWAYS" />
                      <FontAwesomeIcon fill="WHITE" glyphName="LOCK" size="1.3em" />
                  </children>
                  <VBox.margin>
                      <Insets left="15.0" right="15.0" top="15.0" />
                  </VBox.margin>
              </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="NameField" promptText="Ф.И.О." styleClass="tf_box" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <FontAwesomeIcon fill="WHITE" glyphName="USER" size="1.3em" />
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="EmailField" promptText="Email" styleClass="tf_box" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <FontAwesomeIcon fill="WHITE" glyphName="ENVELOPE" size="1.3em" />
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="PhoneField" promptText="Телефон" styleClass="tf_box" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <FontAwesomeIcon fill="WHITE" glyphName="PHONE" size="1.3em" />
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="ErrorLabel" text="Обнаружено пустое поле" textFill="RED" visible="false">
               <VBox.margin>
                  <Insets left="145.0" />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#OnSignUpButton" prefHeight="43.0" prefWidth="450.0" styleClass="blue-btn" text="Зарегистрироваться" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="5.0" />
               </VBox.margin>
            </Button>
          </children>
      </VBox>
   </children>
</StackPane>
